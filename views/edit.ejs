    <!-- Main Form -->
    <main class="max-w-xl mx-auto mt-10 p-6 bg-white rounded shadow">
        <h2 class="text-2xl font-semibold mb-6"><%= date %></h2>
        


<form action="/update/<%=filename%>" method="POST" class="flex flex-col gap-4">
    

  <label class="font-medium">Title</label>
  <input type="text" name="title" class="p-2 border rounded" value="<%= title %>" required>
  
    

  <label class="font-medium">Details</label>
  <textarea name="content" rows="6" class="p-2 border rounded" required><%= content %></textarea>

  <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">
    ğŸ’¾ Update Entry
